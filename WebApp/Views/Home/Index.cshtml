
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="#" class="btn btn-primary">Upload Document</a>
<a href="#" class="btn btn-warning">Compare Document</a>
<hr />
@await Component.InvokeAsync("Document")

<hr />
<form method="post" enctype="multipart/form-data" asp-controller="Document" asp-action="AddDocument">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload Document</p>
            <input type="file" name="file" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <select class="form-control">
                <option>PDF</option>
                <option>DOCX</option>
                <option>HTML</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" multiple/>
        </div>
    </div>
</form>
