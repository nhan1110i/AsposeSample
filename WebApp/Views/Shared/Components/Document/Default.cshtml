@using WebApp.ViewModels
@using WebApp.Constant
@model IEnumerable<ItemViewModel>

<table class="table">
    <tr>
        <th>#</th>
        <th>Document</th>
        <th>Type</th>
        <th>Convert</th>
    </tr>
    @foreach (var document in Model)
    {
        <tr>
            <td><input type="checkbox" id="@document.Id" /></td>
            <td>@document.Name</td>
            <td>@document.FileType</td>
            <td>
                @if (document.FileType == FileType.PDF)
                {

                    <a class="btn btn-sm btn-primary" asp-controller="Document" asp-action="ConvertToWord" asp-route-id="@document.Id">To Docx</a>
                    <a class="btn btn-sm btn-warning" asp-controller="Document" asp-action="ConvertToHtml" asp-route-id="@document.Id">To Html</a>
                }
                @if (document.FileType == FileType.DOCX || document.FileType == FileType.DOC)
                {
                    <a class="btn btn-sm btn-warning" asp-controller="Document" asp-action="ConvertToHtml" asp-route-id="@document.Id">To Html</a>
                    <a class="btn btn-sm btn-info" asp-controller="Document" asp-action="ConvertToPdf" asp-route-id="@document.Id">To Pdf</a>
                }
                @if (document.FileType == FileType.HTML)
                {
                    <a class="btn btn-sm btn-primary" asp-controller="Document" asp-action="ConvertToWord" asp-route-id="@document.Id">To Docx</a>
                    <a class="btn btn-sm btn-info" asp-controller="Document" asp-action="ConvertToPdf" asp-route-id="@document.Id">To Pdf</a>
                }
            </td>
        </tr>
    }
</table>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
<script src="~/js/document.js"></script>