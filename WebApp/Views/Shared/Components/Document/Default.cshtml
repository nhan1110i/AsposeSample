@using WebApp.ViewModels
@using WebApp.Constant
@model IEnumerable<ItemViewModel>

<table class="table">
    <tr>
        <th>#</th>
        <th>Document</th>
        <th>Type</th>
        <th>Convert</th>
    </tr>
    @foreach (var document in Model)
    {
        <tr>
            <td><input type="checkbox" /></td>
            <td>@document.Name</td>
            <td>@document.FileType</td>
            <td>
                @if (document.FileType == FileType.PDF)
                {
                    <a class="btn btn-sm btn-primary">To Docx</a>
                    <a class="btn btn-sm btn-warning">To Html</a>
                }
                @if (document.FileType == FileType.DOCX || document.FileType == FileType.DOC)
                {
                    <a class="btn btn-sm btn-warning">To Html</a>
                    <a class="btn btn-sm btn-danger">To Pdf</a>
                }
                @if (document.FileType == FileType.HTML)
                {
                    <a class="btn btn-sm btn-primary">To Docx</a>
                    <a class="btn btn-sm btn-danger">To Pdf</a>
                }
            </td>
        </tr>
    }
</table>